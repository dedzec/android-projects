<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lucas.app.playlist.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tela de cadastro" />

        <EditText
            android:id="@+id/ednome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="digite o nome do album"
            android:inputType="textPersonName"
            android:layout_below="@+id/tvplay"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btconfirmar"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:text="confirmar"
            android:layout_below="@+id/ednome"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Voltar"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:id="@+id/btvoltar2"
            android:layout_alignBaseline="@+id/btconfirmar"
            android:layout_alignBottom="@+id/btconfirmar"
            android:layout_toEndOf="@+id/btconfirmar" />

    </RelativeLayout>
</RelativeLayout>
