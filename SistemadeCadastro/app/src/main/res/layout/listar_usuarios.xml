<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Listagem de UsuÃ¡rios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvlistagem"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvregistros"
            android:text="Registros: 1/10"
            android:fontFamily="sans-serif"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <TextView
            android:text="Nome:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvnome"
            android:textSize="18sp" />

        <TextView
            android:text="[nome]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvnome2"
            android:textSize="18sp" />

        <TextView
            android:text="Telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvtelefone" />

        <TextView
            android:text="[Telefone]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvtelefone2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Fechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btanterior"
                android:layout_alignStart="@+id/btanterior"
                android:layout_marginStart="62dp"
                android:layout_marginTop="25dp"
                android:id="@+id/btfechar" />

            <Button
                android:text="proximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:id="@+id/btproximo"
                android:layout_above="@+id/btfechar"
                android:layout_toEndOf="@+id/btanterior" />

            <Button
                android:text="Anterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="46dp"
                android:id="@+id/btanterior"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>